<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gtassotti.weatherapp.controller.WeatherController">
   <center>
      <VBox alignment="CENTER" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <AnchorPane prefHeight="454.0" prefWidth="600.0">
            <children>
               <TextField fx:id="cityToSearch" layoutX="403.0" layoutY="14.0" prefHeight="27.0" prefWidth="150.0" AnchorPane.rightAnchor="47.0" />
               <Label fx:id="cityName" alignment="CENTER" contentDisplay="CENTER" layoutX="152.0" layoutY="159.0" prefHeight="35.0" prefWidth="302.0" textOverrun="CENTER_WORD_ELLIPSIS">
                  <font>
                     <Font size="24.0" />
                  </font>
               </Label>
               <Label fx:id="temperatureField" alignment="CENTER" layoutX="253.0" layoutY="177.0" prefHeight="59.0" prefWidth="106.0">
                  <font>
                     <Font name="Segoe UI Semilight" size="48.0" />
                  </font>
               </Label>
               <Label fx:id="weatherInformation" alignment="CENTER" layoutX="244.0" layoutY="229.0" prefHeight="25.0" prefWidth="117.0" textAlignment="CENTER">
                  <font>
                     <Font name="Segoe UI Semilight" size="24.0" />
                  </font>
               </Label>
               <Label fx:id="highTemp" layoutX="251.0" layoutY="259.0" prefHeight="21.0" prefWidth="48.0">
                  <font>
                     <Font name="Segoe UI Semibold" size="14.0" />
                  </font>
               </Label>
               <Label fx:id="lowTemp" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="317.0" layoutY="259.0" prefHeight="22.0" prefWidth="43.0">
                  <font>
                     <Font name="Segoe UI Semibold" size="14.0" />
                  </font>
               </Label>
               <Button layoutX="560.0" layoutY="14.0" mnemonicParsing="false" onAction="#onButtonClickSearch" prefHeight="20.0" prefWidth="31.0" text="🔍" AnchorPane.rightAnchor="9.0">
                  <font>
                     <Font size="13.0" />
                  </font>
               </Button>
               <ComboBox fx:id="results" editable="true" layoutX="403.0" layoutY="57.0" prefHeight="25.0" prefWidth="188.0" AnchorPane.rightAnchor="9.0" />
            </children>
         </AnchorPane>
      </VBox>
   </center>
</BorderPane>
